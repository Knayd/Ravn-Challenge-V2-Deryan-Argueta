<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ravn" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Ravn.Text">
        <item name="android:textSize">@dimen/text_size_default</item>
    </style>

    <style name="Theme.Ravn.Text.LowEmphasis">
        <item name="android:textColor">@color/ravn_text_light</item>
    </style>

    <style name="Theme.Ravn.Text.H2">
        <item name="android:textSize">@dimen/text_size_h2</item>
    </style>

    <style name="Theme.Ravn.Text.H2.LowEmphasis">
        <item name="android:textColor">@color/ravn_text_light</item>
    </style>

    <style name="Theme.Ravn.Text.H2.HighEmphasis">
        <item name="android:textColor">@color/ravn_text_emphasis</item>
    </style>

</resources>